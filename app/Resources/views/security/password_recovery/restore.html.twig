{% extends 'templates/front/base.html.twig' %}

{% block title %}{{ 'Restore password'|trans }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>{{ 'Restore password'|trans }}</h1>

                <div id="form_login" >
                    <form action="{{ path('password_recovery_restore') }}" method="post">
                        <div class="form-group">
                            <label for="user_plainPassword_first" class="required">Password</label>
                            <input type="password" id="user_plainPassword_first" name="user[plainPassword][first]" required="required" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="user_plainPassword_second" class="required">Repeat Password</label>
                            <input type="password" id="user_plainPassword_second" name="user[plainPassword][second]" required="required" class="form-control">
                        </div>

                        <input type="hidden" name="user[id]" value="{{ user_id }}" />

                        <button type="submit">{{ 'Restore'|trans }}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}